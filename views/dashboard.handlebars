<div>
  <div>
    <h2 class="card-header">Welcome, {{name}}!</h2>
  </div>
</div>

<div class="border">
  <div>
    {{! creates a new post }}
    <h3>New Post:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <input
          class="form-input"
          type="text"
          id="post-title"
          name="post-title"
          placeholder="post title"
        />
      </div>
      <div class="form-group">
        <textarea
          class="form-input"
          id="post-article"
          name="post-article"
          placeholder="article content"
        ></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{! renders current posts }}
  {{#if posts.length}}
    <div class="post-list">
      <h3>Current posts:</h3>

      {{#each posts as |post|}}
        <div class="row">
          <div class="">
            <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
          </div>
          <div class="">
            <button
              class="btn btn-sm btn-danger"
              data-id="{{post.id}}"
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src="/js/dashboard.js"></script>