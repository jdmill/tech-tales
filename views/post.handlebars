{{! Post view }}
<div class="card">
  <h2 class="card-header">{{title}}</h2>
  <p>{{article}}</p>
  <p>Created by {{user.name}} on {{formatDate dateCreated}}</p>
</div>

{{! Was unable to get this comment section working }}
{{#if post.comments}}
  <section>
    <div>
      <h4>Comments</h4>
    </div>
    <div>
      {{#each post.comments}}
        <div>
          <p>
            {{body}}
          </p>
          <p>
            {{user.name}},
            {{formatDate dateCreated}}
          </p>
        </div>
      {{/each}}
    </div>
  </section>
{{/if}}

<div class="">
  <div class="card-header">
    <h5>Add Comment</h5>
  </div>
  <form id="comment-form" class="card">
    <div class="card-body">
      <input type="hidden" name="post-id" value="{{post.id}}" />
      <label class="form-label" for="comment">Comment</label>
      <textarea name="post-comment" class="form-input"></textarea>
      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>

<script src="/js/post.js"></script>