<div class="">
  <h2>{{name}}</h2>
  <p>{{title}}</p>
  <p>{{article}}</p>
  <p>Created by {{user.name}} on {{formatDate dateCreated}}</p>
</div>

{{#if comments.length}}
  <div class="comment-list">
    <h3>Current posts:</h3>

    {{#each comments as |comment|}}
    <div class="row">
      <div class="">
        <h4>{{comment.content}}</h4>
      </div>
      <div class="">
        <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}

<div class="">
  <div class="">
    <h3>Create a New Comment:</h3>

    <form class="form new-comment-form">
      <input type="hidden" name="post-id" value="{{post.id}}" />
      <div class="form-group">
        <label for="post-comment">comment:</label>
        <textarea class="form-input" id="post-comment" name="post-comment"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

<script src="/js/post.js"></script>